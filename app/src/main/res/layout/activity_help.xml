<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Bantuan :"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/design_default_color_on_secondary"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.638" />

    <Button
        android:id="@+id/panduan"
        android:layout_width="339dp"
        android:layout_height="41dp"
        android:layout_marginTop="124dp"
        android:text="Profil"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kontak"
        android:layout_width="339dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:text="Ketentuan Dan Persyaratan"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panduan" />

    <Button
        android:id="@+id/kritik"
        android:layout_width="339dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:text="Cara pembayaran"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kontak" />

    <Button
        android:id="@+id/call"
        android:layout_width="339dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:text="Hubungi Pembayaran"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kritik" />

</androidx.constraintlayout.widget.ConstraintLayout>

